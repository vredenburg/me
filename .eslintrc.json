{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "env": {
        "es6": true,
        "browser": true
    },
    "plugins": [
        "svelte3",
      "@typescript-eslint"
    ],
    "overrides": [ // this stays the same
        {
            "files": ["*.svelte"],
            "processor": "svelte3/svelte3"
        }
    ],
    "settings": {
        "svelte3/typescript": true // load TypeScript as peer dependency
      },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  }